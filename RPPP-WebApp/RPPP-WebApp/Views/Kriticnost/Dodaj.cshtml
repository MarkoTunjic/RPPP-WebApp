@model Kriticnost

<h2>Unesite novu kritičnost</h2>

<form asp-action="Dodaj" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="StupanjKriticnosti"></label>
        <div><span asp-validation-for="StupanjKriticnosti" class="text-danger"></span></div>
        <input asp-for="StupanjKriticnosti" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>

</form>