@model SustavViewModel

<h2>Unos novog sustava</h2>

<div class="container">
    <form asp-action="Dodaj" method="post" id="dokument_form">
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">
            <label asp-for="Opis" class=" col-form-label"></label>
            <div class="">
                <input asp-for="Opis" class="form-control" />
                <div><span asp-validation-for="Opis" class="text-danger"></span></div>
            </div>
            <label asp-for="Osjetljivost" class="col-sm-1 col-form-label"></label>
            <div class="">
                <input asp-for="Osjetljivost" class="form-control" />
                <div><span asp-validation-for="Osjetljivost" class="text-danger"></span></div>
            </div>
            <label asp-for="IdStupanjKriticnosti" class="col-form-label"></label>
            <div class="">
                <input asp-for="IdStupanjKriticnosti" readonly="readonly" class="form-control" data-autocomplete-placeholder="stupanjKriticnosti" />
                <div><span asp-validation-for="IdStupanjKriticnosti" class="text-danger"></span></div>
            </div>
            <div class="">
                <input class="form-control" data-autocomplete="stupanjKriticnosti" asp-for="@Model.StupanjKriticnosti" />
            </div>
            <label asp-for="IdVrstaSustava" class="col-form-label"></label>
            <div class="">
                <input asp-for="IdVrstaSustava" readonly="readonly" class="form-control" data-autocomplete-placeholder="vrstaSustava" />
                <div><span asp-validation-for="IdVrstaSustava" class="text-danger"></span></div>
            </div>
            <div class="">
                <input class="form-control" data-autocomplete="vrstaSustava" asp-for="@Model.VrstaSustava" />
            </div>
            <div class="">
                <button id="save" type="submit" class="btn btn-sm btn-primary" title="Spremi">Spremi</button>
                <a class="btn btn-sm btn-primary" value="Odustani" asp-action="Index" title="Odustani">
                    Odustani
                </a>
            </div>
        </div>
        <div class="col-sm-10">
            <partial name="Podsustavi" model="Model.Podsustavi" />
        </div>
    </form>
</div>

<partial name="NoviPodsustavTemplate" />

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
    <script src="~/js/Sustav.js" asp-append-version="true"></script>
}