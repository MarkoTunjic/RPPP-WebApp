@model IEnumerable<PodsustavViewModel>
<table class="table table-striped" id="table-podsustavi">
    <thead>
        <tr>
            @{
                string[] nazivi = { "Stupanj kritičnosti", "Naziv", "Opis", "Osjetljivost", "Lokacija", "Učestalost održavanja" };
                for (int i = 0; i < nazivi.Length; i++)
                {
                    <th class="text-center">
                        @nazivi[i]
                    </th>
                }
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var podsustav in Model)
        {
        <tr>
            <td class="text-left col-sm-4">
                <input type="hidden" name="Podsustavi.Index" value="@podsustav.IdStupanjKriticnosti" />
                <input type="hidden" name="Podsustavi[@podsustav.IdStupanjKriticnosti].Id" value="@podsustav.Id" />
                <input type="hidden" name="Podsustavi[@podsustav.IdStupanjKriticnosti].IdStupanjKriticnosti"  value="@podsustav.IdStupanjKriticnosti" />
                <input type="hidden" name="Podsustavi[@podsustav.IdStupanjKriticnosti].StupanjKriticnosti" value="@podsustav.StupanjKriticnosti" />
                @podsustav.StupanjKriticnosti
            </td>
            <td class="text-center col-sm-1">
                <input name="Podsustavi[@podsustav.IdStupanjKriticnosti].Naziv" class="form-control" value="@podsustav.Naziv" />
            </td>
            <td class="text-center col-sm-1">
                <input name="Podsustavi[@podsustav.IdStupanjKriticnosti].Opis" class="form-control" value="@podsustav.Opis" />
            </td>
            <td class="text-center col-sm-1">
                <input type="number" name="Podsustavi[@podsustav.IdStupanjKriticnosti].Osjetljivost" class="form-control" value="@podsustav.Osjetljivost" />
            </td>
            <td class="text-center col-sm-1">
                <input type="hidden" name="Podsustavi[@podsustav.IdStupanjKriticnosti].IdLokacija" value="@podsustav.IdLokacija" />
                <input type="hidden" name="Podsustavi[@podsustav.IdStupanjKriticnosti].NazivLokacije" value="@podsustav.NazivLokacije" />
                @podsustav.NazivLokacije
            </td>
            <td class="text-center col-sm-1">
                <input type="number" name="Podsustavi[@podsustav.IdStupanjKriticnosti].UcestalostOdrzavanja" class="form-control" value="@podsustav.UcestalostOdrzavanja" />
            </td>
            <td>
                <button class="btn btn-sm btn-danger deleterow" title="Izbaci">Obrisi</button>
            </td>
        </tr>
        }
    <tr>
        <td>
            <input id="podsustav-idStupanjKriticnosti"  type="hidden" data-autocomplete-placeholder="StupanjKriticnosti" readonly="readonly" />
            <input id="podsustav-stupanjKriticnosti"  type="text" data-autocomplete="StupanjKriticnosti" />
        </td>
        <td class="text-center col-sm-1">
            <input id="podsustav-naziv" type="text" />
        </td>
        <td class="text-center col-sm-1">
            <input id="podsustav-opis" type="text" />
        </td>
        <td class="text-center col-sm-1">
            <input id="podsustav-osjetljivost" type="number" />
        </td>
        <td class="text-center col-sm-1">
            <input id="podsustav-idLokacija" type="hidden" data-autocomplete-placeholder="NazivLokacije" readonly="readonly" />
            <input id="podsustav-nazivLokacije" data-autocomplete="NazivLokacije" type="text" />
        </td>
        @*<td class="text-center col-sm-1">
            <input id="podsustav-stupanjKriticnosti" data-autocomplete="stupanjKriticnosti" type="text" />
        </td>*@
        <td class="text-center col-sm-1">
            <input id="podsustav-ucestalostOdrzavanja" type="number" />
        </td>
        <td class="text-left" colspan="3">
            <button id="podsustav-dodaj" class="btn btn-sm btn-secondary" title="Dodaj">Dodaj</button>
        </td>
    </tr>
    </tbody>
</table>

