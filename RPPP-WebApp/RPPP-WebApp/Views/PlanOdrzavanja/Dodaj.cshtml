@model PlanOdrzavanja

<h2>Unos novog plana održavanja</h2>

<form asp-action="Dodaj" method="post">
	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<label asp-for="IdTimZaOdrzavanje"></label>
		<div><span asp-validation-for="IdTimZaOdrzavanje" class="text-danger"></span></div>
		<select class="form-control" asp-for="IdTimZaOdrzavanje" asp-items="ViewBag.Timovi">
			<option disabled selected value="">Odaberite naziv tima</option>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="IdPodsustav"></label>
		<div><span asp-validation-for="IdPodsustav" class="text-danger"></span></div>
		<select class="form-control" asp-for="IdPodsustav" asp-items="ViewBag.Podsustavi">
			<option disabled selected value="">Odaberite podsustav</option>
		</select>
	</div>
	<div class="form-group">
		<label asp-for="DatumOdrzavanja"></label>
		<div><span asp-validation-for="DatumOdrzavanja" class="text-danger"></span></div>
		<input asp-for="DatumOdrzavanja" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="RazinaStrucnosti"></label>
		<div><span asp-validation-for="RazinaStrucnosti" class="text-danger"></span></div>
		<input type="number" min="1" max="10" asp-for="RazinaStrucnosti" class="form-control" />
	</div>
	<div class="text-center">
		<button class="btn btn-primary" type="submit">Dodaj</button>
		<a asp-action="Index" class="btn btn-default">Odustani</a>
	</div>
</form>

@section scripts {
<partial name="IncludeValidation" />
}