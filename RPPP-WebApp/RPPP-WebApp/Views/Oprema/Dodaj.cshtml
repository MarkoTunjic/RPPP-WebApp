@model OpremaViewModel

<h2>Unos nove opreme</h2>

<div class="container">
    <form asp-action="Dodaj" method="post" id="dokument_form">
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">
            <label asp-for="Redundantnost" class=" col-form-label"></label>
            <div class="">
                <input asp-for="Redundantnost" class="form-control" />
                <div><span asp-validation-for="Redundantnost" class="text-danger"></span></div>
            </div>
            <label asp-for="Budzet" class="col-sm-1 col-form-label"></label>
            <div class="">
                <input asp-for="Budzet" class="form-control" />
                <div><span asp-validation-for="Budzet" class="text-danger"></span></div>
            </div>
            <label asp-for="DatumPustanjaUPogon" class=" col-form-label"></label>
            <div class="">
                <input asp-for="DatumPustanjaUPogon" class="form-control" />
                <div><span asp-validation-for="DatumPustanjaUPogon" class="text-danger"></span></div>
            </div>
            <label asp-for="IdOpreme" class="col-form-label"></label>
            <div class="">
                <input asp-for="IdOpreme" readonly="readonly" class="form-control" data-autocomplete-placeholder="tipOpreme" />
                <div><span asp-validation-for="IdOpreme" class="text-danger"></span></div>
            </div>
            <div class="">
                <input class="form-control" data-autocomplete="tipOpreme" asp-for="@Model.TipOpreme" />
            </div>
            <label asp-for="IdPodsustava" class="col-form-label"></label>
            <div class="">
                <input asp-for="IdPodsustava" readonly="readonly" class="form-control" data-autocomplete-placeholder="podsustav" />
                <div><span asp-validation-for="IdPodsustava" class="text-danger"></span></div>
            </div>
            <div class="">
                <input class="form-control" data-autocomplete="podsustav" asp-for="@Model.PodsustavNaziv" />
            </div>
            <div class="">
                <button id="save" type="submit" class="btn btn-sm btn-primary" title="Spremi">Spremi</button>
                <a class="btn btn-sm btn-primary" value="Odustani" asp-action="Index" title="Odustani">
                    Odustani
                </a>
            </div>
        </div>
        <div class="col-sm-10">
            <partial name="Uredaji" model="Model.Uredaji" />
        </div>
    </form>
</div>

<partial name="NoviUredajTemplate" />

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
    <script src="~/js/OpremaList.js" asp-append-version="true"></script>
}