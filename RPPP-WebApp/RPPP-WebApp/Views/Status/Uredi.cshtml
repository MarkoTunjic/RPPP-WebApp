@model Status

<form asp-route-page="@ViewBag.Page"
	  asp-route-sort="@ViewBag.Sort"
	  asp-route-ascending="@ViewBag.Ascending"
	  method="post">
	<div asp-validation-summary="All"></div>
	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<label asp-for="NazivStatusa"></label>
		<div><span asp-validation-for="NazivStatusa" class="text-danger"></span></div>
		<input asp-for="NazivStatusa" class="form-control" />
	</div>
	<div class="text-center">
		<button class="btn btn-primary" type="submit">Spremi</button>
		<a asp-action="Index"
		   asp-route-page="@ViewBag.Page"
		   asp-route-sort="@ViewBag.Sort"
		   asp-route-ascending="@ViewBag.Ascending"
		   class="btn btn-secondary">Odustani</a>
	</div>
</form>

@section scripts {
<partial name="IncludeValidation" />
}
