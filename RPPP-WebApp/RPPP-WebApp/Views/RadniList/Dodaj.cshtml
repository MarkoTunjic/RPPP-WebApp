@model RadniList

<h2>Unos novog radnog lista</h2>

<form asp-action="Dodaj" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="IdRadniNalog"></label>
        <div><span asp-validation-for="IdRadniNalog" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdRadniNalog" asp-items="ViewBag.RadniNalozi">
            <option disabled selected value="">Odaberite povezani radni nalog</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="PocetakRada"></label>
        <div><span asp-validation-for="PocetakRada" class="text-danger"></span></div>
        <input type="date" asp-for="PocetakRada" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TrajanjeRada"></label>
        <div><span asp-validation-for="TrajanjeRada" class="text-danger"></span></div>
        <input type="number" min="0" asp-for="TrajanjeRada" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OpisRada"></label>
        <div><span asp-validation-for="OpisRada" class="text-danger"></span></div>
        <input type="text" asp-for="OpisRada" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdUredaj"></label>
        <div><span asp-validation-for="IdUredaj" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdUredaj" asp-items="ViewBag.Uredaji">
            <option disabled selected value="">Odaberite uređaj</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IdTimZaOdrzavanje"></label>
        <div><span asp-validation-for="IdTimZaOdrzavanje" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdTimZaOdrzavanje" asp-items="ViewBag.Timovi">
            <option disabled selected value="">Odaberite zaduženi tim</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="IdStatus"></label>
        <div><span asp-validation-for="IdStatus" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdStatus" asp-items="ViewBag.Statusi">
            <option disabled selected value="">Odaberite status radnog lista</option>
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}