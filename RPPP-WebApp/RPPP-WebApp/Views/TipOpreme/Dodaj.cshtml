@model TipOpreme
    <p class="small">
        Validacija, dodavanje
    </p>

<h2>Unos novog tipa opreme</h2>

<form asp-action="Dodaj" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="TipOpreme1"></label>
        <div><span asp-validation-for="TipOpreme1" class="text-danger"></span></div>
        <input asp-for="TipOpreme1" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Dodaj</button>
        <a asp-action="Index" class="btn btn-default">Odustani</a>
    </div>
</form>

@section scripts {
<partial name="IncludeValidation" />
}