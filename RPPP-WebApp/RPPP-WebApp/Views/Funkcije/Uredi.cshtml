@model Funkcije

<form asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Naziv"></label>
        <div><span asp-validation-for="Naziv" class="text-danger"></span></div>
        <input asp-for="Naziv" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdPodsustav"></label>
        <div><span asp-validation-for="IdPodsustav" class="text-danger"></span></div>
        <select class="form-control" asp-for="IdPodsustav" asp-items="ViewBag.Podsustavi">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Kategorija"></label>
        <div><span asp-validation-for="Kategorija" class="text-danger"></span></div>
        <input asp-for="Kategorija" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}
