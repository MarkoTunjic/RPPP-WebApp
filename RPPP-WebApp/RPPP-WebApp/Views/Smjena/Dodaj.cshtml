@model SmjenaViewModel

<h2>Unos nove smjene</h2>

<div class="container">
	<form asp-action="Dodaj" method="post" id="dokument_form">
		<div asp-validation-summary="All" class="form-group row"></div>

		<div class="form-group row">
			<label asp-for="PocetakSmjene" class=" col-form-label"></label>
			<div class="">
				<input asp-for="PocetakSmjene" class="form-control" />
				<div><span asp-validation-for="PocetakSmjene" class="text-danger"></span></div>
			</div>
			<label asp-for="PlatniFaktor" class="col-sm-1 col-form-label"></label>
			<div class="">
				<input asp-for="PlatniFaktor" class="form-control" />
				<div><span asp-validation-for="PlatniFaktor" class="text-danger"></span></div>
			</div>
			<label asp-for="IdKrajSmjene" class="col-form-label"></label>
			<div class="">
				<input asp-for="IdKrajSmjene" readonly="readonly" class="form-control" data-autocomplete-placeholder="krajSmjene" />
				<div><span asp-validation-for="IdKrajSmjene" class="text-danger"></span></div>
			</div>
			<div class="">
				<input class="form-control" data-autocomplete="krajSmjene" asp-for="@Model.VrijemeKrajaSmjene" />
			</div>
			<div class="">
				<button id="save" type="submit" class="btn btn-sm btn-primary" title="Spremi">Spremi</button>
				<a class="btn btn-sm btn-primary" value="Odustani" asp-action="Index" title="Odustani">
					Odustani
				</a>
			</div>
		</div>
		<div class="col-sm-10">
			<partial name="Kontrolori" model="Model.Kontrolori" />
		</div>
	</form>
</div>

<partial name="NoviKontrolorTemplate" />

@section styles{
<link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
<partial name="IncludeValidation" />
<script src="~/lib/jqueryui/jquery-ui.js"></script>
<script src="~/js/autocomplete.js" asp-append-version="true"></script>
<script src="~/js/Smjene.js" asp-append-version="true"></script>
}
